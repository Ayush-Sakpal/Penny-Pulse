<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgBlack"
    tools:context=".QuickHitsScreen">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:src="@drawable/add_icon"
        android:contentDescription="floatingbutton"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="84dp"
        android:layout_marginHorizontal="21dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/menuButton"
            android:layout_alignParentStart="true"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:src="@drawable/menu_icon"
            android:backgroundTint="@color/bgBlack"
            android:layout_marginVertical="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="4dp"
            android:contentDescription="Menu"

            android:padding="4dp"
            />


        <ImageButton
            android:id="@+id/calendarButton"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_alignStart="@id/menuButton"
            android:layout_marginVertical="11dp"
            android:layout_marginStart="54dp"
            android:layout_marginEnd="11dp"
            android:backgroundTint="@color/bgBlack"
            android:contentDescription="calendar"
            android:padding="4dp"
            android:src="@drawable/calendar_icon" />

        <ImageButton
            android:id="@+id/notification"
            android:layout_alignParentEnd="true"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_margin="11dp"
            android:layout_gravity="end|bottom"
            android:backgroundTint="@color/bgBlack"
            android:contentDescription="notification"
            android:padding="4dp"
            android:src="@drawable/notification_icon" />

    </RelativeLayout>



    <HorizontalScrollView

        android:id="@+id/horizontalScrollViewCards"
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:foregroundGravity="center"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.170">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            android:orientation="horizontal"
            android:foregroundGravity="center"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/scrollableCards1"
                android:layout_width="380dp"
                android:layout_height="200dp"
                android:layout_marginHorizontal="20dp"
                app:cardCornerRadius="11dp"
                app:cardElevation="11dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.293">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_color"
                    android:orientation="vertical">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Available Balance"
                        android:textColor="@color/white"
                        android:textSize="27sp"
                        android:gravity="start"
                        android:fontFamily="@font/montserratregular"
                        android:layout_marginHorizontal="11dp"
                        android:layout_marginVertical="4dp"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="\u20b9 7777"
                        android:textSize="70dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserratregular"
                        android:layout_marginHorizontal="11dp"
                        android:layout_marginVertical="4dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">



                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/scrollableCards2"
                android:layout_width="380dp"
                android:layout_height="200dp"
                android:layout_marginHorizontal="20dp"
                app:cardBackgroundColor="@color/grey"
                app:cardCornerRadius="11dp"
                app:cardElevation="11dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.293"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/scrollableCards3"
                android:layout_width="380dp"
                android:layout_height="200dp"
                android:layout_marginHorizontal="20dp"
                app:cardBackgroundColor="@color/grey"
                app:cardCornerRadius="11dp"
                app:cardElevation="11dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.293"
                />

        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/features"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="49dp"
        app:layout_constraintTop_toBottomOf="@id/horizontalScrollViewCards"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:gravity="fill_horizontal"
        android:background="@color/bgBlack"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/bgBlack"

            android:layout_weight="1">

            <ImageButton
                android:layout_gravity="center"
                android:layout_width="56dp"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:src="@drawable/chart_icon"
                android:contentDescription="chart"
                android:elevation="41dp"
                android:background="@drawable/roundcorner"
                />

            <TextView
                android:layout_marginTop="4dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/montserratregular"
                android:text="Charts"
                android:textSize="11dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageButton
                android:layout_gravity="center"
                android:layout_width="56dp"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:src="@drawable/history_icon"
                android:contentDescription="history"
                android:elevation="41dp"
                android:background="@drawable/roundcorner"
                />

            <TextView
                android:layout_marginTop="4dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/montserratregular"
                android:text="History"
                android:textSize="11dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageButton
                android:layout_gravity="center"
                android:layout_width="56dp"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:src="@drawable/chart_icon"
                android:contentDescription="chart"
                android:elevation="41dp"
                android:background="@drawable/roundcorner"
                />

            <TextView
                android:layout_marginTop="4dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/montserratregular"
                android:text="charts"
                android:textSize="11dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageButton
                android:layout_gravity="center"
                android:layout_width="56dp"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:src="@drawable/chart_icon"
                android:contentDescription="chart"
                android:elevation="41dp"
                android:background="@drawable/roundcorner"
                />

            <TextView
                android:layout_marginTop="4dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/montserratregular"
                android:text="charts"
                android:textSize="11dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="35dp"
        app:layout_constraintTop_toBottomOf="@id/features"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserratregular"
                android:gravity="center"
                android:text="Recent Transactions"
                android:textColor="@color/white"
                android:textSize="21sp" />

            <ImageButton
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:backgroundTint="@color/bgBlack"
                android:src="@drawable/refresh"
                android:foregroundGravity="right"
                android:layout_alignParentEnd="true"
                android:contentDescription="refresh"/>

        </RelativeLayout>

        <ListView
            android:layout_width="match_parent"
            android:id="@+id/recentTransList"
            android:layout_height="wrap_content"
            android:divider="@color/white">



        </ListView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>