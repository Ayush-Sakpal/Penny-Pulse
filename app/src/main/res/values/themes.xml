<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PennyPulse" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.PennyPulse" parent="Base.Theme.PennyPulse" />

    <style name="Theme.PennyPulse.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PennyPulse.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PennyPulse.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeMaterialCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item><!-- Set width to 90% of the screen -->
        <item name="android:windowBackground">@android:color/transparent</item><!-- Background color -->
        <item name="windowActionBar">false</item>
        <!-- Customize other items as needed -->
    </style>

</resources>